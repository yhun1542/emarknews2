# EmarkNews Premium Environment Variables Sample
NODE_ENV=production

# News API Keys (comma-separated for multiple keys)
NEWS_API_KEYS=your_news_api_key_1,your_news_api_key_2

# AI/Translation Services
GENERATIVE_AI_API_KEY=your_openai_api_key
GENERATIVE_AI_ENDPOINT=https://api.openai.com/v1/chat/completions

# Google Cloud Translation
GOOGLE_PROJECT_ID=emarknews
GOOGLE_APPLICATION_CREDENTIALS={"type":"service_account","project_id":"your_project_id",...}

# Currency API
CURRENCY_API_KEY=your_currency_api_key

# Twitter/X API
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# CORS Settings
ORIGIN_WHITELIST=https://emarknews.com,https://www.emarknews.com

# Port (Railway will override this)
PORT=3000

