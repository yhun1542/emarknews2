        }
        
        // ë‰´ìŠ¤ ë°ì´í„° ìš”ì²­
        console.log('ğŸ“° ë‰´ìŠ¤ ë°ì´í„° ìš”ì²­ ë°›ìŒ');
        const newsData = await newsSystem.collectAllNews();
        res.writeHead(200);
        res.end(JSON.stringify(newsData, null, 2));
        
      } else if (req.method === 'POST') {
        // ìˆ˜ë™ ì—…ë°ì´íŠ¸ ìš”ì²­
        console.log('ğŸ”„ ìˆ˜ë™ ë‰´ìŠ¤ ì—…ë°ì´íŠ¸ ìš”ì²­');
        newsSystem.clearCache();
        const newsData = await newsSystem.collectAllNews();
        res.writeHead(200);
        res.end(JSON.stringify({
          success: true,
          message: 'ë‰´ìŠ¤ê°€ ì„±ê³µì ìœ¼ë¡œ ì—…ë°ì´íŠ¸ë˜ì—ˆìŠµë‹ˆë‹¤.',
          data: newsData,
          timestamp: new Date().toISOString()
        }, null, 2));
        
      } else {
        res.writeHead(405);
        res.end(JSON.stringify({ error: 'í—ˆìš©ë˜ì§€ ì•ŠëŠ” ë©”ì†Œë“œì…ë‹ˆë‹¤.' }));
      }
      
    } else if (pathname === '/') {
      // ë©”ì¸ í˜ì´ì§€
      const indexPath = path.join(__dirname, 'public', 'index.html');
      serveStaticFile(res, indexPath);
      
    } else {
      // ì •ì  íŒŒì¼ ì„œë¹™
      const filePath = path.join(__dirname, 'public', pathname);
      
      // ë³´ì•ˆ: ë””ë ‰í† ë¦¬ íŠ¸ë˜ë²„ì„¤ ë°©ì§€
      if (!filePath.startsWith(path.join(__dirname, 'public'))) {
